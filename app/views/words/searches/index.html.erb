<%= form_with(url: words_searches_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索", class: "search-input" %>
  <%= form.submit "検索",data: { disable_with: "検索中..." }, class: "search-btn" %>
<% end %>
<% @words.each do |word| %>
  <%= render partial: "words/word", locals: { word: word } %> 
<% end %>